@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
@using PaletteWebApp.ViewModels;
@model AppUserViewModel;

<div class="createAcount">
	<form asp-action="Edit" method="post">
		<div>
			<h3 class="text-light">Update account</h3>
		</div>
		<div class="align-text-left text-light mb-4">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control" disabled />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="align-text-left text-light my-4">
			<label asp-for="@Model.Email"></label>
			<input asp-for="@Model.Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="align-text-left text-light my-4">
			<label for="Password">Password</label>
			<input name="Password" class="form-control" type="password"/>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="align-text-left text-light my-4">
			<label asp-for="ConfirmPassword">Confirm Password</label>
			<input asp-for="ConfirmPassword" class="form-control" type="password">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
		<input type="submit" class="btn btn-light btn-createAcount" value="Save" />
	</form>
</div>
