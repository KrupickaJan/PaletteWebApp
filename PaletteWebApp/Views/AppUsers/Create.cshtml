@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
@using PaletteWebApp.ViewModels;
@model AppUserViewModel;

<div class="createAcount">
	<form asp-action="Create" method="post">
		<div>
			<h3 class="text-light">Create account</h3>
		</div>
		<div class="align-text-left text-light mb-4">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="align-text-left text-light my-4">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		<div class="align-text-left text-light my-4">
			<label asp-for="Password"></label>
			<input asp-for="Password" class="form-control" type="password" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="align-text-left text-light my-4">
			<label asp-for="ConfirmPassword"></label>
			<input asp-for="ConfirmPassword" class="form-control" type="password" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
		<input type="submit" class="btn btn-light btn-createAcount" value="Create account" />
	</form>
</div>



